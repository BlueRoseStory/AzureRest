{
  "bindings": [
    {
      "name": "req",
      "route": "books/{itemId}",
      "authLevel": "function",
      "methods": [
        "get"
      ],
      "direction": "in",
      "type": "httpTrigger"
    },
    {
      "name": "res",
      "direction": "out",
      "type": "http"
    },
    {
      "name": "item",
      "databaseName": "sysdoc",
      "collectionName": "books",
      "connectionStringSetting": "CosmosConnectionString",
      "id": "{itemId}",
      "partitionKey": "{headers.sysdoc-ownerid}",
      "direction": "in",
      "type": "cosmosDB"
    }
  ]
}